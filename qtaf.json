{
  "tasks": {
    "env_up": [
      "docker-compose up -d"
    ],
    "env_down": [
      "docker-compose down"
    ],
    "aws_up": [
      "docker-compose up -d"
    ],
    "aws_down": [
      "docker-compose down"
    ]
  },
  "envs": [
    {
      "name": "chrome-local",
      "vars": {"DRIVER_NAME": "chrome"},
      "groups": ["local"]
    },
    {
      "name": "firefox-local",
      "vars": {
        "DRIVER_NAME": "firefox",
        "DRIVER_VERSION": "30.0"
      },
      "groups": ["local"]
    },
    {
      "name": "edge-local",
      "vars": {"DRIVER_NAME": "edge"},
      "groups": ["local"]
    },
    {
      "name": "chrome-remote",
      "vars": {"DRIVER_NAME": "chrome-remote"},
      "groups": ["remote"]
    },
    {
      "name": "firefox-remote",
      "vars": {"DRIVER_NAME": "firefox-remote"},
      "groups": ["remote"]
    },
    {
      "name": "edge-remote",
      "vars": {"DRIVER_NAME": "edge-remote"},
      "groups": ["remote"]
    }
  ]
}